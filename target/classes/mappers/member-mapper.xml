<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC
"-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="memberMapper">

	<select id="login" parameterType="Member" resultType="Member">
		SELECT *
		FROM MEMBER WHERE ID = #{id} AND PASSWORD = #{password}
	</select>
	
	<select id="chkDup" parameterType="Member" resultType="Member">
		SELECT *
		FROM MEMBER WHERE ID = #{id}
	</select>
	
	<select id="emailChk" parameterType="Member" resultType="Member">
		SELECT *
		FROM MEMBER WHERE EMAIL = #{email}
	</select>
	

	<insert id="enroll">
		insert into member
		values
		(MEM_SEQ.NEXTVAL,#{id},#{password},#{email},null,0,0,0,0,#{job},SYSDATE,null)
	</insert>

	<update id="update">
		update member set
		PASSWORD=#{password},
		EMAIL=#{email},
		JOB=#{job} WHERE
		ID=#{id}
	</update>
</mapper>